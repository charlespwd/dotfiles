{
  "diagnostic.displayByAle": true,
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "javascript.validate.enable": false,
  "tsserver.enableJavascript": true,
  "tsserver.log": "verbose",
  "tsserver.trace.server": "verbose",
  "tsserver.implicitProjectConfig.checkJs": true,
  "solargraph.transport": "stdio",
  "solargraph.checkGemVersion": false,
  "snippets.extends": {
    "typescriptreact": ["typescript"]
  },
  "languageserver": {
    "theme-check": {
      "command": "/Users/charles/bin/theme-check-language-server",
      "trace.server": "verbose",
      "filetypes": ["liquid", "liquid.html"],
      "rootPatterns": [".theme-check.yml", "snippets/*"],
      "settings": {
        "themeCheck": {
          "checkOnSave": true,
          "checkOnEnter": true,
          "checkOnChange": false
        }
      }
    },
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      "filetypes": ["graphql"]
    }
  },
  "coc.source.emoji.filetypes": [
    "markdown",
    "vimwiki"
  ]
}
