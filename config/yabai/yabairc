# script additions
sudo yabai --load-sa

# bsp or float (default: bsp)
yabai -m config layout bsp

# Set all padding and gaps to 20pt (default: 0)
yabai -m config top_padding    20
yabai -m config bottom_padding 20
yabai -m config left_padding   80
yabai -m config right_padding  80
yabai -m config window_gap     20

# No padding on iPad
yabai -m config --space 11 top_padding    0
yabai -m config --space 11 bottom_padding 0
yabai -m config --space 11 left_padding   0
yabai -m config --space 11 right_padding  0
yabai -m config --space 11 window_gap     0

# No borders
# yabai -m config top_padding    0
# yabai -m config bottom_padding 0
# yabai -m config left_padding   0
# yabai -m config right_padding  0
# yabai -m config window_gap     0

# floating windows are always on top (default: off)
yabai -m config window_topmost on

# modify window shadows (default: on, options: on, off, float)
# example: show shadows only for floating windows
yabai -m config window_shadow float

# window opacity (default: off)
# example: render all unfocused windows with 90% opacity
yabai -m config window_opacity on
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 0.5

# window rules
yabai -m rule --add app="Omnifocus" manage=off
yabai -m rule --add app="Omnifocus 2" manage=off
yabai -m rule --add app="AppBundle" manage=off
yabai -m rule --add app="Civ" manage=off
yabai -m rule --add app="OBS" manage=off
yabai -m rule --add app="Civilization" manage=off
yabai -m rule --add app="^Alfred Preferences$" manage=off grid=5:4:1:1:2:3
yabai -m rule --add app="^Civ6" manage=off
yabai -m rule --add app="^Monosnap$" manage=off
yabai -m rule --add app="^Steam" manage=off
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^steam" manage=off

